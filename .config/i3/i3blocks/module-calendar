#!/usr/bin/env bash

#name of monitor

SCR=$(xrandr -q 2>/dev/null | grep -w connected | cut -d " " -f1 | cut -d "-" -f1 | sed s/1//)
case "$BLOCK_BUTTON" in
  1|2|3) 
    i3-msg 'exec gsimplecal' > /dev/null ;;
esac
if [ "$SCR" = "Virtual" ]; then

    echo "$(date '+%H:%M %a %d/%m/%g') <span font='Font Awesome' color='#ff4000'><span size='large'> ðŸ—“</span></span> "
else
    echo "$(date '+%H:%M %a %d/%m/%g') <span font='Font Awesome'><span size='large'> &#xf073;</span></span> "
fi
