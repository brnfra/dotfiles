#           causados pelo uso deste script.
# shellcheck source=~/bin/dotfiles_env
. dotfiles_env

local_repo_pull() {
    clnInfo "${0##*/}"
    backto=$(pwd)
    cInfo "Git pull in repository folder. Branch:"
    cItalic "$branch" "in"
    clnItalic "$dotfiles_dir"

    if [ -d "$dotfiles_dir" ]
    then
	cd "$dotfiles_dir" || return
	if git checkout "$branch"; then

	    git pull origin "$branch"
	    cmOk "Git pull clone repository folder"
	else
	    cError "Check logs(ssh or connection). Or clone dotfiles in"
	    clnItalic "$dotfiles_dir"
	fi
    else
	clnError "No such directory to pull in"
	cInfo "Clone repository first. Branch:"
	cItalic "$branch" "in"
	clnItalic "$dotfiles_dir"
    fi
    cd "$backto" || return
}
