#!/usr/bin/env bash
# Arquivo: pull_config
# Autor: Bruno Franco
# Ultima_modificacao: 30-03-2023
# Download: git@github.com:brnfra
# Licence:Este arquivo é de domínio público
# Garantia: O autor não se responsabiliza por eventuais danos
#           causados pelo uso deste script.
for file in ~/bin/{bare_repo_pull,local_repo_pull,ssh_config,dotfiles_env}; do
    [ -r "$file" ] && [ -f "$file" ] && source "$file";
done;
unset file;
if connection &> /dev/null && ssh_connect ;then
    bare_repo_pull
    local_repo_pull
elif connection &> /dev/null; then
    cmOk "Connection"
    clnError "Check your ssh-agent."
    exit 1
elif ssh_connect ;then
    cmOk "ssh-agent"
    clnError "Check your connection."
    exit 2
else 
    clnError "Check your connection and your ssh-agent."
    exit 3
fi
