#!/usr/bin/env bash
osys=$(cat /etc/os-release | sed -n -r '/^ID=/p' | cut -d "=" -f 2)
#requirements for i3blocks and more
if [ "$osys" = "debian" ] || [ "$osys" = "ubuntu" ]; then
    sudo apt-get update && sudo apt-get install \
    jq \
    sysstat \
    i3lock-fancy \
    blueman \
    xfce4-terminal \
    scrot \
    pcmanfm \
    ranger \
    compton \
    x11-utils \
    xfce4-power-manager \
    nitrogen \
    acpi \
    gsimplecal \
    vim neovim vifm \
    'unzip' \
    shunit2
elif [ "$osys" = "manjaro" ]; then
    sudo pacman -Syu \
    jq \
    sysstat \
    unzip \
    blueman \
    xfce4-terminal \
    scrot \
    pcmanfm \
    ranger \
    picom \
    xorg-xwininfo \
    xfce4-power-manager \
    nitrogen \
    acpi \
    gsimplecal \
    vim neovim vifm \
    fzf
fi
