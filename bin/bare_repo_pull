#           causados pelo uso deste script.
for file in ~/bin/{dotfiles_env,config_check,dirs_config,git_config,ssh_config,get_fonts,bkp_cfg_files}; do
    [ -r "$file" ] && [ -f "$file" ] && source "$file";
done;
unset file;
bkp_conflict ()
{
    conflicts=$(git_config pull origin $branch 2>&1 | sed -r '/^\w/d;/\*/d' | awk '{print $1}') 
    #git_config pull origin $branch 2>&1 | sed -r '/^\w/d;/\*/d' | awk '{print $1}' | xargs -I {} mv "$HOME"/{} "$HOME"/{}.backup
    echo "conflicts $conflicts"
    for file in $conflicts
    do     
	mv "$HOME"/"$file" "$HOME"/"$file".backup
    done  
    config_check
    cmOk "Checking and backup files"
    cInfo "Move .backup files to:" "$bkpdir"
    bkp_cfg_files 1>> "$bkpLog" 
    cmOk "Clean"

}

bare_repo_pull() {
    cInfo "Get config from remote(pull) to:" "pull --bare-repo"
    backto=$(pwd)
    cd "$HOME" || return
    if git_config pull origin "$branch" &>> $bkpLog
    then
	config_check

	cInfo "Git pull, branch" "$branch" "(--bare)"
	cmOk "Git pull"
    else
	cError "${LINENO}:Config pull error:" "Conflict." "Backup conflicts and try again"

	bkp_conflict 

	if git_config pull --no-commit origin $branch
	then
	    config_check
	    cInfo "Git pull config, branch" "$branch" "(--bare)"
	    cmOk "Git pull"
	else
	    clnError "${LINENO}:Can't resolve conflicts. Trying to Fetch. UNDO changes!"
	    cError "${LINENO}:Can't pull anyway .Exit with errors. Check:" "$bkpLog" " for more datails."
	    exit 1
	fi
    fi
    cd "$backto" || return
}

bare_repo_fetch() {
    cInfo "Get config from remote(fetch) to:" "fetch and reset --bare-repo FETCH_HEAD"
    backto=$(pwd)
    cd "$HOME" || return
    if git_config fetch --all &>> $bkpLog
    then
	git_config reset --hard FETCH_HEAD &>> $bkpLog

	if config_check ;then
	    cmOk "Files check"
	else
	    cError "Files check"
	    exit 3
	fi

	cInfo "Git pull, branch" "$branch" "(--bare)"
	cmOk "Git pull"
    else
	cError "${LINENO}:Config fetch error:" "Conflict." "Backup conflicts and try again"

    fi
    cd "$backto" || return
}


