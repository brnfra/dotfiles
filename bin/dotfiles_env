# Color {{{ 
# escape
E='\033['
italic="${E}3m"
reset="${E}0m"
bold="${E}1m"
# Set foreground colors
red="${E}31m"
green="${E}32m"
cyan="${E}36m"
grey="${E}2m"

cInfo() {
    printf "${grey}%s${reset} %s${cyan}${bold}${italic} %s${reset} %s\n"  "[INFO]" "$1" "$2" "$3"
}
cError() {
    printf "${red}%s${reset} %s${cyan}${bold}${italic} %s${reset} %s\n" "[FAIL]" "$1" "$2" "$3"
}
cOk() {
    printf "${green}%s ${reset}%s\n" "[ OK ]" "$1"
}
# }}}
