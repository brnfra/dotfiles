#!/usr/bin/env bash

bkpLog="$HOME/.config-bkp/stage-bkp.log"
bkpdir="$HOME"/.config-bkp
branch="testing"
checkAll="$HOME/tests/dotfilesTest.sh"
checkHome="$HOME/tests/testHomeConfigFiles.sh"
dotfiles_dir="$HOME/Documents/Projects/git/dotfiles"
email="devlabbr@gmail.com"
fonts_path="$HOME/.local/share/fonts"
i3_cfg="$HOME/.i3/config"
i3_scpt="$HOME/bin/i3_config_install"
install_dir="$HOME"/.dotfiles
pushFrom="$HOME/Documents/Projects/git/dotfiles"
repository="https://github.com/$user_name/dotfiles.git"
user_name="brnfra"
#colors
reset=$(tput sgr0);
bold=$(tput bold);
red=$(tput setaf 124);
italic=$(tput sitm);
green=$(tput setaf 34);
cyan=$(tput setaf 39);
# Color {{{ 
function cInfo {
    local reset
    local bold
    local cyan
    reset=$(tput sgr0);
    bold=$(tput bold);
    cyan=$(tput setaf 39);
    printf "%s%s[INFO] %s %s" "$cyan" "$bold" "$reset" "$1" 
}
function cError {
    local reset
    local bold
    local red
    reset=$(tput sgr0);
    bold=$(tput bold);
    red=$(tput setaf 124);
    printf "%s%s[ERROR] %s %s" "$red" "$bold" "$reset" "$1" 
}
function cItalic {
    local cyan
    local italic
    local reset
    cyan=$(tput setaf 39);
    italic=$(tput sitm);
    reset=$(tput sgr0);
    printf "%s%s %s %s %s" "$cyan" "$italic" "$1" "$reset" "$2"
}
function cOk {
    local reset
    local bold
    local green
    reset=$(tput sgr0);
    bold=$(tput bold);
    green=$(tput setaf 34);
    printf "%s: %s%s\tOK\n%s" "$1" "$green" "$bold" "$reset" 
}
function cmOk {
    local reset
    local bold
    local green
    reset=$(tput sgr0);
    bold=$(tput bold);
    green=$(tput setaf 34);
    printf "%s: %s%s\tOK\n%s" "$1" "$green" "$bold" "$reset" 
}
function clnInfo {
    local reset
    local bold
    local cyan
    reset=$(tput sgr0);
    bold=$(tput bold);
    cyan=$(tput setaf 39);
    printf "%s%s[INFO] %s %s\n" "$cyan" "$bold" "$reset" "$1" 
}
function clnError {
    local reset
    local bold
    local red
    reset=$(tput sgr0);
    bold=$(tput bold);
    red=$(tput setaf 124);
    printf "%s%s[ERROR] %s %s\n" "$red" "$bold" "$reset" "$1" 
}
function clnItalic {
    local cyan
    local italic
    local reset
    cyan=$(tput setaf 39);
    italic=$(tput sitm);
    reset=$(tput sgr0);
    printf "%s%s %s %s %s\n" "$cyan" "$italic" "$1" "$reset" "$2"
}
