#Generated by script to manage in multiple computer
#https://unixsheikh.com/tutorials/how-you-can-manage-the-i3-window-manager-on-multiple-computers.html
# shellcheck source=dotfiles_env
. dotfiles_env

for pkg in $packs_list 
do
    if [ "$osys" = "ubuntu" ] || [ "$osys" = "debian" ]; then
	if ! dpkg -s "$pkg" ; then 
	    sudo apt-get update && sudo apt-get install "$pkg"
	fi 
    elif [ "$osys" = "manjaro" ]; then
	if ! pacman -Qi "$pkg" ; then 
	    sudo pacman -S  "$pkg"
	fi
    elif [ "$osys" = "$opensuse" ]; then
	if zypper --non-interective install "$pack" &> /dev/null; then
	    cOk "$pack" >> "$bkpLog"
	else
	    cInfo "Check log in: " "$bkpLog"
	    cError " " "$pack" >> "$bkpLog"
	fi

    fi
done

