#            causados pelo uso deste arquivo.

local=$(pwd)
backupCopy="$HOME/.config-bkp"
DATE=$(date +%d/%m/%Y-%H:%M:%S)
copyTo="$HOME/Documents/Projects/git/dotfiles"
bkpLog="$HOME/.config-bkp/stage-bkp.log"

#function for backup
sync_copy ()
{
    printf "[INFO]Sync beginning at %s\n" "$DATE" > $bkpLog
    # bash
    files='.bashrc .bash/ '
    # vim
    files+='.vimrc .config/nvim/ '
    # vifm
    files+='.config/vifm/vifmrc  ' 
    files+='.config/vifm/scripts/ ' 
    files+='.config/vifm/colors/ ' 
    # terminalrc=
    files+='.config/xfce4/terminal/terminalrc ' 
    # i3
    files+='.i3/ '
    files+='.i3/autostart/ '
    files+='.i3/i3blocks/ '
    # rofi
    files+='.config/rofi/ .config/rofi/themes/ '
    # ranger
    files+='.config/ranger/devicons.py '
    files+='.config/ranger/rc.conf '
    files+='.config/ranger/scope.sh '
    # systemrc
    files+='.wgetrc .curlrc '
    # git
    files+='.gitconfig '
    files+='.git-completion.bash '
    # compton
    files+='.config/compton.conf  '
    files+='.config/compton/ '
    # tmux
    files+='.tmux.conf '
    # scripts
    files+='bin/ '

    for file in $files; do
	printf "[INFO]Files or folder to stage: (%s)\n" "$file" &>> $bkpLog
	newDir=$copyTo/$file
	mkdir -p "$(echo ${newDir%/*})" 
	rsync -va --exclude '*.backup' -b --backup-dir=$backupCopy  $HOME/$file $copyTo/$file &>> $bkpLog
	printf "[INFO]Files to stage: (%s), Done!\n" "$file" &>> $bkpLog
    done
}

#check folders
if [ -d "$copyTo" ] && [ -d "$backupCopy" ];then
    cd "$copyTo" || return
    sync_copy
else
    printf "[ERROR]No %s or/and %s found.\n" "$copyTo" "$backupCopy" 
    printf "[ERROR]No %s or/and %s found.\n" "$copyTo" "$backupCopy" &>> $bkpLog 
    exit 1
fi

cd "$local" || return

printf "[INFO]Sync accomplished at %s\n" "$DATE" &>> $bkpLog
printf "If error occured check backup log: %s ; All Done!.\n" "$bkpLog"
