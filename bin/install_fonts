#!/usr/bin/env bash

#Fonts
cd "$HOME/.local/share/fonts" || return

nerdfont="nerdfont.zip"
codeNewRoman="codeNewRoman.zip"
monofur="Monofur.zip"

#setup git(script from https://github.com/lewagon/dotfiles/git_setup.sh )
if  command -v unzip &>/dev/null  
then
    	echo -e "\n Downloading Nerdfont..."
	eval curl -C - -Lkso $nerdfont "https://github.com/ryanoasis/nerd-fonts/releases/download/v2.1.0/3270.zip" 
	echo -e "\n Downloading CoeNewRoman..."
	eval curl -C - -Lkso $codeNewRoman "https://github.com/ryanoasis/nerd-fonts/releases/download/v2.1.0/CodeNewRoman.zip"
	echo -e "\n Downloading Monofur..."
	eval curl -C - -Lkso $monofur "https://github.com/ryanoasis/nerd-fonts/releases/download/v2.1.0/Monofur.zip"

else
    echo "Error! The package Unzip is not installed."
    exit 1
fi

eval unzip -uCoq "*.zip"

PROCESS_ID=$!
wait $PROCESS_ID

eval fc-cache -vf "$HOME/.local/share/fonts"
echo -e "\nAll done!\n"

exit 0
