# shellcheck source=~/bin/dotfiles_env
. dotfiles_env

clone_bare_repo() {
cInfo "Git clone %s(--bare)."
clnItalic "$branch"

if git clone --branch "$branch" --bare "$repository" "$install_dir";
then
    cInfo "Git clone"
    cItalic "$branch" "(--bare)"
    cOk
else
    clnError "Can't clone repository"
    exit 1
fi
}

