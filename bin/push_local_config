#            causados pelo uso deste arquivo.

local=$(pwd)
pushFrom="$HOME/Documents/Projects/git/dotfiles"
BRANCH="main"

function git_push () 
{
    UPFILES=$(git status -sb | sed '1d;s/^\sM/ Mod\-/g;s/??/ Add\-/g;s/^\sD/ Del\-/g')
    MSG="$1. $UPFILES"
    git add -A -v;git commit -v -m "$MSG";git push origin $BRANCH   
    if [ $? ];then
	printf "[INFO] Accomplished, no errors.\n" 
	git status -sb
    else
	git status -sb 
	printf "[ERROR] A error occours. Check log.\n" 
    fi
}

if [ -d "$pushFrom" ];then
    cd "$pushFrom" || return
    stage_local_config
    git_push
else
    printf "[ERROR] No %s found.\n" "$pushFrom" 
    exit 1
fi

cd "$local" || return

