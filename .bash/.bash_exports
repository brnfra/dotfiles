#!/usr/bin/env bash

# Add `~/bin` to the `$PATH`
export PATH="$HOME/bin:$PATH";

# Make vim the default editor.
export EDITOR='vim';
export CLICOLOR=1;
export GCC_COLORS='error=01;31:warning=01;35:note=01;36:caret=01;32:locus=01:quote=01';
export VISUAL=vim;
export BROWSER="firefox '%s' &"
# Enable persistent REPL history for `node`.
export NODE_REPL_HISTORY=~/.node_history;

# Allow 32³ entries; the default is 1000.
export NODE_REPL_HISTORY_SIZE='2768';
        
# Use sloppy mode by default, matching web browsers.
export NODE_REPL_MODE='sloppy';

# Make Python use UTF-8 encoding for output to stdin, stdout, and stderr.
export PYTHONIOENCODING='UTF-8';

# Increase Bash history size. Allow 32³ entries; the default is 500.
export HISTSIZE='2768';
export HISTFILESIZE="${HISTSIZE}";

# Omit duplicates and commands that begin with a space from history.
export HISTCONTROL='ignoreboth';

# Prefer US English and use UTF-8.
#export LANG='en_US.UTF-8';
#export LC_ALL='en_US.UTF-8';

# Highlight section titles in manual pages.
yellow=$(tput setaf 220);
export LESS_TERMCAP_md="${yellow}";

# Don’t clear the screen after quitting a manual page.
export MANPAGER='less -X';

# Avoid issues with `gpg` as installed via Homebrew.
# https://stackoverflow.com/a/42265848/96656
# export GPG_TTY=$(tty);

# Custom installations
OPT="$HOME/.local/opt/"

# Install Ruby Gems to ~/gems
export GEM_HOME="$HOME/gems"
export PATH="$HOME/gems/bin:$PATH"
export PATH=$PATH:$HOME/bin/composer
export PATH=$HOME/.gem/ruby/2.7.0/bin:$PATH

# Android
export ANDROID_SDK_ROOT="/media/SamsungHDD/AndroidProjects/Android/Sdk/"
export ANDROID_SDK_HOME="/media/SamsungHDD/AndroidProjects/.android/"
export ANDROID_EMULATOR_HOME="/media/SamsungHDD/AndroidProjects/.android/"
export ANDROID_AVD_HOME="$ANDROID_EMULATOR_HOME/avd/"
export ANDROID_HOME="/media/SamsungHDD/AndroidProjects/Android/Sdk"
export PATH=$PATH:ANDROID_HOME/tools

# Java - SDK 12
export JAVA_HOME="/usr/lib/jvm/adoptopenjdk-12-openj9-amd64"
export PATH=$JAVA_HOME/bin:$PATH
export PATH_TO_FX="$HOME/.jdks/javafx-sdk-17.0.1/lib"

#fzf need to fd-find ripgrep packs
export FD_OPTIONS="-H -L --exclude .git --exclude node_modules"
export FZF_DEFAULT_OPTS="--no-mouse --height 50% -1 --reverse --multi --inline-info --preview='[[ \$(file --mime {}) =~ binary ]] && echo {} ia a binary file || (bat --style=numbers --color=always {} || cat {}) 2> /dev/null | head -300' --preview-window='right:hidden:wrap' --bind='f3:execute(bat --style=numbers {} || less -f {}),ctrl-d:half-page-down,ctrl-u:half-page-up,ctrl-a:select-all+accept,f2:toggle-preview,ctrl-y:execute-silent(echo {+} | pbcopy)'"

#use git-ls-files inside fgit repo, otherwise fd
export FZF_DEFAULT_COMMAND="git ls-files --cached --others --exclude_standard | fd --type f --type i $FD_OPTIONS"
export FZF_CTRL_T_COMMAND="fd $FD_OPTIONS"
export FZF_ALT_C_COMMAND="fd --type d $FD_OPTIONS"
export DOCKER_HOST=unix:///var/run/docker.sock

#python
export NVIM_PYTHON_LOG_FILE=/tmp/log
export NVIM_PYTHON_LOG_LEVEL=DEBUG

#sdkman
export SDKMAN_DIR="$HOME/.sdkman"

# Flutter
export PATH="$PATH:$OPT/flutter/bin"

#heroku
export HEROKU="$OPT/heroku"
export PATH=$HEROKU/bin:$PATH

#nodejs v-16
VERSION=v16.14.0
DISTRO=linux-x64
export NODE="$OPT/node-$VERSION-$DISTRO" 
export PATH=$NODE/bin:$PATH
