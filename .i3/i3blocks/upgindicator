#!/usr/bin/env bash

source ~/.i3/i3blocks/vars
osys=$(cat /etc/os-release | sed -n -r '/^ID=/p' | cut -d "=" -f 2)
if [ "$osys" = "debian" ] || [ "$osys" = "ubuntu" ]; then
    check="$(expr $(apt list --upgradeable | wc -l) - 1)"
    color="'orange'"
elif [ "$osys" = "manjaro" ]; then
    check="$(checkupdates | wc -l)"
fi
font_params_close="</b></span>"
if [ "$check" -lt 1 ]; then
    printf "%s %s %s\n" "<span $font $green $font_medium $font_bold >" "No Updates" "</span>"
else
    printf "%s %s %s\n" "<span $font $orange $font_medium $font_bold >" "â†‘($check Pkgs)" "</span>"
fi
