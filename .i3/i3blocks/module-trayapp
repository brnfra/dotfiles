#!/usr/bin/env bash
#name of monitor
SCR=$(xrandr -q 2>/dev/null | grep -w connected | cut -d " " -f1 | cut -d "-" -f1 | sed s/1//)
#process grep name
ISOPEN=$(pgrep kdocker)
case "$BLOCK_BUTTON" in
  1|2|3) 
      if [ "$ISOPEN" = "" ]; then  
        i3-msg 'exec kdocker' >/dev/null
      else
          killall -s 9 "$ISOPEN"
      fi
    ;;
esac
if [ "$SCR" = "Virtual" ]; then
echo "<span font='Font Awesome'color='red'> <span size='x-large'>ðŸ”½</span> </span>"
else
    echo "<span font='Font Awesome'color='red'> <span size='x-large'>ðŸ”½</span> </span>"
fi
