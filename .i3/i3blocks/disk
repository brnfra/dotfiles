# $ fc-list command to list fonts
font_face='"monofurNF"'
#xx-small , x-small , small , medium , large , x-large , xx-large , xxx-large.
font_size='"medium"'
color='"#2666A1"'
color_alert='#FF0000'

font_params="<span font=$font_face"
font_params+=" color=$color "
font_params+=" size=$font_size >"

font_alert_params="<span font=$font_face"
font_alert_params+=" color=$color_alert "
font_alert_params+=" size=$font_size >"

font_params_close="</span>"

DIR="${BLOCK_INSTANCE:-$HOME}"
ALERT_LOW="${1:-10}" # color will turn red under this value (default: 10%)
ALERT_HIGH="${1:-90}" # color will turn red up this value (default: 90%)

output=$(df -h -P -l "$DIR" | awk -v alert_low=$ALERT_LOW '
/\/.*/ {
	free=$4
	used=$3
	size=$2
	#percent
	use=$5 
	

}

END {

	# full text
	#printf "%.f%%", use; 
	    
	# short text
	printf "%.f%%", use; 

	# gsub(/%$/,"",use)
	#     # color
	# if (100 - use < alert_low) {
	#     print "#FF0000"
	# }
	
	#     # color
	# if ( pct > 30 ) {
	#     # short text alert color
	#     print("#FFF600")
	    
	# }
		
	# no need to continue parsing
	exit 0


}
')



out_to_int=${output//\%/)}


if [[ $out_to_int > $ALERT_HIGH  ]]
then
    printf "%s&#xf233; %s%%s" "$font_alert_params" "$output" "$BLOCK_INSTANCE" "$font_params_close"
else
    printf "%s&#xf233; %s%s%s"  "$font_params" "$output" "$BLOCK_INSTANCE" "$font_params_close"
fi

